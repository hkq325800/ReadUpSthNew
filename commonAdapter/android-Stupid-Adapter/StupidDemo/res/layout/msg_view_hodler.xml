<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ViewStub
        android:id="@+id/viewStub_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/msg_view_hodler_sender" />

    <ViewStub
        android:id="@+id/viewStub_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/msg_view_holder_receive" />

    <TextView
        android:id="@+id/system_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />

</RelativeLayout>